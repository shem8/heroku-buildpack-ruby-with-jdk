#!/usr/bin/env ruby

p "running java install script"

p "-----> Installing OpenJDK 7..."
`install_java #{ARGV[0]} 7`
`jdk_overlay #{ARGV[0]}`
p "-----> Install done"

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

LanguagePack::Instrument.trace 'compile', 'app.compile' do
  if pack = LanguagePack.detect(ARGV[0], ARGV[1])
    pack.topic("Compiling #{pack.name}")
    pack.log("compile") do
      pack.compile
    end
  end
end
